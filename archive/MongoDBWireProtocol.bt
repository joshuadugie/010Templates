void ReadData()
{
  struct {
    int32 length;
    int32 id;
    int32 responseTo;
    int32 operation;
    int32 flags;
    
    if( operation == 1 ) { // RESPONSE
        int64 cursor;
        int32 startingFrom;
        int32 num;
        ReadBson(1);
    } else if( operation == 2002 ) { // INSERT
        string namespc;
        ReadBson(1);
    } else if( operation == 2004 ) { // FIND
        string namespc;
        int32 numToSkip;
        int32 batchSize;
        ReadBson(1);
    }
  } mongoData;
}

